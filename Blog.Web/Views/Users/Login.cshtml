<h2>Вхід</h2>
<form asp-action="Login" method="post">
    <label>Ім'я користувача:</label><input name="username" /><br />
    <label>Пароль:</label><input name="password" type="password" /><br />
    <button type="submit">Увійти</button>
    @if (ViewBag.Error != null) { <p style="color:red">@ViewBag.Error</p> }
</form>
<a href="/Users/Register">Зареєструватися</a>