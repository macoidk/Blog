@model IEnumerable<BlogSystem.BLL.DTO.CategoryDto>
<h2>Список рубрик</h2>
<table class="table">
    <tr><th>Назва</th><th>Опис</th><th></th></tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>
            <td>@category.Description</td>
            <td>
                <a href="/Categories/Details/@category.Id">Деталі</a> |
                <a href="/Categories/Edit/@category.Id">Редагувати</a> |
                <a href="/Categories/Delete/@category.Id">Видалити</a>
            </td>
        </tr>
    }
</table>
<a href="/Categories/Create">Додати рубрику</a>