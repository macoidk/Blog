@model BlogSystem.BLL.DTO.CategoryDto
<h2>Delete Category</h2>
<p>Are you sure you want to delete "@Model.Name"?</p>
<form asp-action="DeleteConfirmed" asp-controller="Categories" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit">Delete</button>
</form>
<a href="/Categories/List">Back to List</a>